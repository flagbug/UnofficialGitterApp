<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gitter.Views.RoomView">
  <StackLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Orientation="Vertical" Padding="15,10,15,10">
    <!--<BoxView Color="Silver" HeightRequest="0.5" HorizontalOptions="FillAndExpand" />-->

    <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
      <Image HorizontalOptions="Start" VerticalOptions="FillAndExpand" x:Name="Avatar" WidthRequest="40" HeightRequest="40" />

      <StackLayout HorizontalOptions="StartAndExpand" VerticalOptions="FillAndExpand" Orientation="Vertical">
        <Label HorizontalOptions="StartAndExpand" VerticalOptions="Start" Text="{Binding Name}" Font="Medium" />
        <Label HorizontalOptions="StartAndExpand" VerticalOptions="Start" Text="{Binding Topic}" Font="Small" TextColor="Gray" />
      </StackLayout>
    </StackLayout>

  </StackLayout>
</ContentView>